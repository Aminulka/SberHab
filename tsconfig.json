{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "@types", "./src/types"],
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "server/**/*.ts", "types"]
}
